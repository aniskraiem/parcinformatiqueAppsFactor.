<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <div class="auto-form-wrapper">
                        <div style="text-align: center "  >
                        <div style="color: #0b85ea">
                            <h1>Connexion</h1>
                        </div>
                        </div>

                        <form action="{{ path('login')}}" method="post">

                            <div class="form-group">
                                <label class="label">Email ou Pseudo</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="username" name="email" value="{{ last_username }}">
                                    <div class="input-group-append">
                        <span class="input-group-text">
                          <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="label">Mot de passe <p></p></label>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="*********" name="password">
                                    <div class="input-group-append">
                        <span class="input-group-text">
                          <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button class="btn btn-primary submit-btn btn-block" type="submit">Connexion</button>
                            </div>
                            {% if error %}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            {% endif %}
                            <div class="form-group d-flex justify-content-between">
                                <div class="form-check form-check-flat mt-0">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" checked>Maintenir ma session ouverte </label>
                                </div>
                                <a href="#" class="text-small forgot-password text-black">Mot de passe oubli√©</a>
                            </div>


                        </form>
                    </div>
                    <ul class="auth-footer">
                        <li>
                            <a href="#">Conditions</a>
                        </li>
                        <li>
                            <a href="#">Help</a>
                        </li>
                        <li>
                            <a href="#">Terms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
